<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="OnClick"
        tools:context=".MainActivity">

    <Button
            android:text="withToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="connect_withToast"
            android:id="@+id/connect"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
    />
    <Button
            android:text="sendvioce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendvoice"
            android:enabled="false"
            android:id="@+id/sendvoice_btn"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/recordStopBtn"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <Button
            android:text="RECORD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="recordOrStopCheck"
            android:id="@+id/recordStopBtn"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/connect"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

    />

</android.support.constraint.ConstraintLayout>